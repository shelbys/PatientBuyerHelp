{
  "name": "PatientBuyerHelp",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "build": "yarn -s lint",
    "lint": "yarn -s lint-eslint && yarn -s lint-prettier",
    "lint-eslint": "eslint --ignore-pattern .vscode --ignore-pattern coverage/ --ignore-pattern dist/",
    "lint-prettier": "prettier -c **/*.{js,json,md}",
    "clean": "rimraf yarn.lock node_modules",
    "dev": "nodemon"
  },
  "dependencies": {
    "yarn": "^1.22.22"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/mocha": "^10.0.10",
    "c8": "^10.1.3",
    "chai": "^6.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-mocha": "^11.2.0",
    "eslint-plugin-react": "^7.37.5",
    "mocha": "^11.7.5",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.1",
    "rimraf": "^6.1.2",
    "yarn": "^1.22.22",
    "yarn-upgrade-all": "^0.7.5"
  },
  "nodemonConfig": {
    "ignore": [
      ".vscode/*"
    ],
    "watch": [
      "**"
    ],
    "exec": "yarn build",
    "ext": "css,html,js,jsx,json,md,svg,yml"
  },
  "prettier": {
    "bracketSpacing": false,
    "printWidth": 120,
    "proseWrap": "always",
    "objectWrap": "preserve",
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none"
  }
}
